{
  "name": "ssl-validator",
  "version": "4.1.0",
  "description": "Validator for certificates, bundles, and keys",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "lint": "esw . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "lint:changed": "lint-staged",
    "test": "mocha",
    "reinstall": "rm -rf node_modules && yarn install",
    "prepare": "husky install",
    "coverage": "nyc yarn run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Losant/ssl-validator.git"
  },
  "keywords": [
    "ssl",
    "openssl",
    "certificates",
    "keys"
  ],
  "author": "Losant IoT",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Losant/ssl-validator/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.js": "esw"
  },
  "dependencies": {
    "pem": "^1.14.8",
    "ramda": "^0.30.1"
  },
  "devDependencies": {
    "@losant/eslint-config-losant": "^1.6.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "mocha": "^10.7.3",
    "nyc": "^17.0.0",
    "should": "^13.2.3"
  },
  "eslintConfig": {
    "extends": "@losant/eslint-config-losant/env/node"
  },
  "mocha": {
    "reporter": "spec",
    "recursive": true,
    "check-leaks": true
  }
}
